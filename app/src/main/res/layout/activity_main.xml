<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_rl1"
        android:gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="500dp"
            android:layout_height="400dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/gradient_rl2"
            android:gravity="center"
            android:paddingTop="125dp">

            <EditText
                android:id="@+id/ingresarUsuario"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:fontFamily="@font/Roboto"
                android:layout_marginStart="50dp"
                android:background="@drawable/edittext"
                android:hint="@string/ingresaUsuario"
                android:paddingStart="18dp"
                android:textColorHint="#ffffff"
                android:textColor="#FFFFFF">
            </EditText>

            <ImageView
                android:id="@+id/userLogo"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="-1dp"
                android:layout_marginTop="-1dp"
                android:background="@drawable/baseline_user"
                android:backgroundTint="@color/black">
            </ImageView>

            <CheckBox
                android:id="@+id/selectRecordarContraseña"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="-10dp"
                android:layout_marginTop="145dp">
            </CheckBox>

            <TextView
                android:id="@+id/recordarTextContraseña"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:fontFamily="@font/Roboto"
                android:layout_marginStart="32dp"
                android:layout_marginTop="160dp"
                android:text="Recordar Contraseña"
                android:textColor="@color/tex"
                android:textSize="15sp">

            </TextView>

            <TextView
                android:id="@+id/recuperarContraseña"
                android:layout_width="170dp"
                android:layout_height="20dp"
                android:layout_marginStart="213dp"
                android:layout_marginTop="160dp"
                android:autoLink="web"
                android:linksClickable="true"
                android:fontFamily="@font/Roboto"

                android:text="@string/contraseña2"
                android:textColor="@color/tex"
                android:textSize="15sp">
            </TextView>

            <TextView
                android:id="@+id/crearCuenta"
                android:layout_width="170dp"
                android:layout_height="20dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="190dp"
                android:autoLink="web"
                android:gravity="center"
                android:fontFamily="@font/Roboto"
                android:linksClickable="true"
                android:text="@string/crearLogin"
                android:textColor="@color/tex"
                android:textSize="15sp">
            </TextView>


            <EditText
                android:id="@+id/Ingresarpassword"
                android:layout_width="310dp"
                android:fontFamily="@font/Roboto"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/edittext"
                android:hint="@string/ingresarContraseña"
                android:inputType="textPassword"
                android:paddingStart="18sp"
                android:textColor="#FFFFFF"
                android:textColorHint="#ffffff">
            </EditText>

            <ImageView
                android:id="@+id/passwordLogo"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="-1dp"
                android:layout_marginTop="78dp"
                android:background="@drawable/baseline_lock_24"
                android:backgroundTint="@color/black">
            </ImageView>

        </RelativeLayout>

        <TextView
            android:id="@+id/bienvenidoText"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:fontFamily="@font/Roboto"
            android:layout_marginStart="110dp"
            android:layout_marginTop="100dp"
            android:text="@string/bienvenido"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold">

        </TextView>

        <ImageView
            android:id="@+id/ImagenUser"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:gravity="center"
            android:layout_marginStart="105dp"
            android:layout_marginTop="-80dp"
            android:background="@drawable/baseline_usercircle">

        </ImageView>

        <Button
            android:id="@+id/ingresar"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="410dp"
            android:text="@string/ingresar"
            android:fontFamily="@font/Roboto"
            android:textSize="20sp">

        </Button>


    </RelativeLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>