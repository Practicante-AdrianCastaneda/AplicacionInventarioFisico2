<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/gradient_rl1"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="500dp"
            android:layout_height="400dp"
            android:paddingTop="125dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/gradient_rl2"
            android:gravity="center">

            <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/edittext"
                android:hint="    Ingrese su usuario"
                android:textColorHint="#ffffff">
                </EditText>

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="-1dp"
                android:layout_marginTop="-10px"
                android:background="@drawable/baseline_user"
                android:backgroundTint="@color/black">
            </ImageView>

            <CheckBox
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="152dp"
                android:layout_marginLeft="2dp">
            </CheckBox>

            <TextView
                android:layout_width="140dp"
                android:layout_height="20dp"
                android:textColor="@color/tex"
                android:textSize="15dp"
                android:text="Recordar contraseña"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="160dp">

            </TextView>

            <TextView
                android:layout_width="170dp"
                android:layout_height="20dp"
                android:textColor="@color/tex"
                android:text="Recuperar la contraseña"
                android:layout_marginLeft="200dp"
                android:textSize="15dp"
                android:autoLink="web"
                android:linksClickable="true"
                android:layout_marginTop="160dp">
            </TextView>

            <TextView
                android:layout_width="170dp"
                android:layout_height="20dp"
                android:textColor="@color/tex"
                android:text="Crear cuenta"
                android:textSize="15dp"
                android:autoLink="web"
                android:gravity="center"
                android:linksClickable="true"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="190dp">
            </TextView>


            <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:layout_marginLeft="50dp"
                android:hint="    Ingrese su contraseña"
                android:textColorHint="#ffffff"
                android:layout_marginTop="80dp">
            </EditText>
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="-1dp"
                android:layout_marginTop="200px"
                android:background="@drawable/baseline_lock_24"
                android:backgroundTint="@color/black">
            </ImageView>

        </RelativeLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="130dp"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Bienvenido">

        </TextView>

        <ImageView
            android:layout_width="500px"
            android:layout_height="500px"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="-80dp"
            android:background="@drawable/baseline_usercircle">

        </ImageView>

        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:text="Ingresar"
            android:textSize="20dp"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="30dp">

        </Button>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>